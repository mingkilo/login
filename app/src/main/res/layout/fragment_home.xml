                android:text="3900"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/home_water_volume_text"
                app:layout_constraintEnd_toStartOf="@+id/home_water_volume_text"
                app:layout_constraintTop_toTopOf="@+id/home_water_volume_text" />

            <TextView
                android:id="@+id/home_water_slash_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/home_water_volume_text"
                app:layout_constraintEnd_toStartOf="@+id/home_water_target_volume_text"
                app:layout_constraintTop_toTopOf="@+id/home_water_volume_text" />

            <TextView
                android:id="@+id/home_water_complete_volume_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3900"
                android:textColor="@color/middleBlue"
