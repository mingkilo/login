                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/home_water_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_water_drop_24"
                app:layout_constraintBottom_toBottomOf="@+id/home_water_borderbox"
                app:layout_constraintStart_toStartOf="@+id/guideline21"
                app:layout_constraintTop_toTopOf="@+id/home_water_borderbox" />

            <TextView
                android:id="@+id/home_water_volume_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
