            <TextView
                android:id="@+id/home_number_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="50dp"
                app:layout_constraintBottom_toBottomOf="@+id/home_days_text"
                app:layout_constraintEnd_toStartOf="@+id/home_days_text"
                app:layout_constraintTop_toTopOf="@+id/home_days_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
