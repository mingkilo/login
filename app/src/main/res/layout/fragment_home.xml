                app:layout_constraintBottom_toBottomOf="@+id/home_exercise_time_text"
                app:layout_constraintEnd_toStartOf="@+id/home_exercise_target_time_text"
                app:layout_constraintTop_toTopOf="@+id/home_exercise_time_text" />

            <TextView
                android:id="@+id/home_exercise_complete_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/home_exercise_time_text"
                app:layout_constraintEnd_toStartOf="@+id/home_exercise_slash_text"
                app:layout_constraintTop_toTopOf="@+id/home_exercise_time_text"
