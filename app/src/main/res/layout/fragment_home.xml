                app:layout_constraintTop_toTopOf="@+id/home_hello" />

            <TextView
                android:id="@+id/home_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="56dp"
                android:text="How are you today?"
                android:textColor="@color/app_theme_light"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/home_user_picture"
                app:layout_constraintEnd_toStartOf="@+id/home_user_picture"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@+id/guideline4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/lavander_border"
