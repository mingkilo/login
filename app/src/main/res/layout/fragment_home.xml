            <TextView
                android:id="@+id/home_exercise_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_directions_run_24"
                app:layout_constraintBottom_toBottomOf="@+id/home_exercise_borderbox"
                app:layout_constraintStart_toStartOf="@+id/guideline21"
                app:layout_constraintTop_toTopOf="@+id/home_exercise_borderbox" />

            <TextView
                android:id="@+id/home_exercise_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" hours"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/home_exercise_borderbox"
                app:layout_constraintEnd_toStartOf="@+id/guideline34"
                app:layout_constraintTop_toTopOf="@+id/home_exercise_borderbox" />

            <TextView
                android:id="@+id/home_exercise_target_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/home_exercise_time_text"
                app:layout_constraintEnd_toStartOf="@+id/home_exercise_time_text"
                app:layout_constraintTop_toTopOf="@+id/home_exercise_time_text" />

            <TextView
                android:id="@+id/home_exercise_slash_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
