                android:drawableLeft="@drawable/baseline_bedtime_24"
                app:layout_constraintBottom_toBottomOf="@+id/home_sleep_borderbox"
                app:layout_constraintStart_toStartOf="@+id/guideline21"
                app:layout_constraintTop_toTopOf="@+id/home_sleep_borderbox" />

            <TextView
                android:id="@+id/home_sleep_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" hours"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/home_sleep_borderbox"
                app:layout_constraintEnd_toStartOf="@+id/guideline34"
                app:layout_constraintTop_toTopOf="@+id/home_sleep_borderbox" />

            <TextView
                android:id="@+id/home_sleep_target_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/home_sleep_time_text"
