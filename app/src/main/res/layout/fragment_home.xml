                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline30"
                app:layout_constraintTop_toTopOf="@+id/guideline28" />

            <TextView
                android:id="@+id/home_water_alarm_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_alarm_24"
                app:layout_constraintBottom_toBottomOf="@+id/home_water_notification"
                app:layout_constraintStart_toStartOf="@+id/guideline29"
                app:layout_constraintTop_toTopOf="@+id/home_water_notification" />

            <TextView
                android:id="@+id/home_exercise_alarm_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_alarm_24"
                app:layout_constraintBottom_toBottomOf="@+id/home_exercise_notification"
                app:layout_constraintStart_toStartOf="@+id/guideline29"
                app:layout_constraintTop_toTopOf="@+id/home_exercise_notification" />

            <TextView
                android:id="@+id/home_sleep_alarm_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_alarm_24"
                app:layout_constraintBottom_toBottomOf="@+id/home_sleep_notification"
                app:layout_constraintStart_toStartOf="@+id/guideline29"
                app:layout_constraintTop_toTopOf="@+id/home_sleep_notification" />
